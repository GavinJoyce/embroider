{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run tests",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "cwd": "${workspaceFolder}/packages/macros",
      "args": ["--runInBand", "--testPathPattern", "tests/babel/get-config.test.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run codemod",
      "program": "${workspaceFolder}/test-packages/support/codemod.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build macro-tests app",
      "program": "${workspaceFolder}/node_modules/.bin/ember",
      "cwd": "${workspaceFolder}/test-packages/macro-tests",
      "args": ["build"],
      "env": {
        "JOBS": "1"
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build engines-host-app",
      "program": "${workspaceFolder}/node_modules/.bin/ember",
      "cwd": "${workspaceFolder}/test-packages/engines-host-app",
      "args": ["build"],
      "env": {
        "JOBS": "1",
        "STAGE2_ONLY": "true"
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build fastboot-app",
      "program": "${workspaceFolder}/node_modules/.bin/ember",
      "cwd": "${workspaceFolder}/test-packages/fastboot-app",
      "args": ["build"],
      "env": {
        "JOBS": "1"
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test fastboot-app",
      "program": "${workspaceFolder}/node_modules/.bin/qunit",
      "cwd": "${workspaceFolder}/test-packages/fastboot-app",
      "args": ["fastboot-tests"],
      "env": {
        "REUSE_FASTBOOT_BUILD": "true"
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build macro-tests app classic",
      "program": "${workspaceFolder}/node_modules/.bin/ember",
      "cwd": "${workspaceFolder}/test-packages/macro-tests",
      "args": ["build"],
      "env": {
        "JOBS": "1",
        "CLASSIC": "true"
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build engines-host-app",
      "program": "${workspaceFolder}/node_modules/.bin/ember",
      "cwd": "${workspaceFolder}/test-packages/engines-host-app",
      "args": ["build"],
      "env": {
        "JOBS": "1"
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Serve macro-tests app",
      "program": "${workspaceFolder}/node_modules/.bin/ember",
      "cwd": "${workspaceFolder}/test-packages/macro-tests",
      "args": ["s"],
      "env": {
        //"CLASSIC": "true",
        "JOBS": "1"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build macro-sample-addon",
      "program": "${workspaceFolder}/node_modules/.bin/ember",
      "cwd": "${workspaceFolder}/test-packages/macro-sample-addon",
      "args": ["build"],
      "env": {
        "JOBS": "1"
        //"CLASSIC": "true",
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build static-app",
      "program": "${workspaceFolder}/node_modules/.bin/ember",
      "cwd": "${workspaceFolder}/test-packages/static-app",
      "args": ["build"],
      "env": {
        "JOBS": "1"
        //"CLASSIC": "true",
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build router dummy app",
      "program": "${workspaceFolder}/node_modules/.bin/ember",
      "cwd": "${workspaceFolder}/packages/router",
      "args": ["build"],
      "env": {
        "JOBS": "1"
        //"CLASSIC": "true",
      },
      "outputCapture": "std"
    }
  ]
}
